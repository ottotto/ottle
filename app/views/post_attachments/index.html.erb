<div style="height:50px"></div>
<div class="container">
  <h1>Listing Post Attachments</h1>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Attachment</th>
        <th>Post ID</th>
        <th>Name</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @post_attachments.each do |post_attachment| %>
        <tr>
          <td><%= image_tag post_attachment.avatar_url, width: "50px" %></td>
          <td><%= post_attachment.post_id %></td>
          <td><%= post_attachment.avatar %></td>
          <td class ="center">
            <div class="btn-group btn-xs">
              <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                Action <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu"> 
                <li><%= link_to 'Show', post_attachment %></li>
                <li><%= link_to 'Edit', edit_post_attachment_path(post_attachment) %></li>
                <li><%= link_to 'Destroy', post_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Post attachment', new_post_attachment_path %>
</div>