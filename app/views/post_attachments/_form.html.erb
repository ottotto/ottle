<%= form_for(@post_attachment) do |f| %>
  <% unless @post_attachment.avatar_url.nil? %>
    <%= image_tag @post_attachment.avatar_url, width: "50%" %><br />
  <% end %>
  <div class="form-group">
    <%= f.label :post_id %><br>
    <%= f.number_field :post_id, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>
