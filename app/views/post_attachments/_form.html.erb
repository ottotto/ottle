<%= form_for(@post_attachment) do |f| %>
  <%= image_tag @post_attachment.avatar, style: "width: 30%"%>
  <div class="form-group">
    <%= f.label :post_id %><br>
    <%= f.number_field :post_id, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>
