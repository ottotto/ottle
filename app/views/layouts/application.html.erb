<!DOCTYPE html>
<html>
	<head>
	  <title>Ottle</title>
	  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
<!--CSS-->
	  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= stylesheet_link_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" %>
	<!--Image Gallery-->
	  <%= stylesheet_link_tag "//blueimp.github.io/Gallery/css/blueimp-gallery.min.css" %>
	  <!--<%= stylesheet_link_tag "css/bootstrap-image-gallery.min.css" %>-->
<!--JS-->
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<!--Charts-->
	  <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
      <%= javascript_include_tag "http://code.highcharts.com/stock/highstock.js" %>
      <%= javascript_include_tag "http://code.highcharts.com/stock/modules/exporting.js" %>
	<!--Stripe-->
	  <%= javascript_include_tag "https://js.stripe.com/v2/" %>
	<!--Google Map-->
	  <%= javascript_include_tag "//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" %>
	  <%= javascript_include_tag '//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js'  %>
	<!--Image Gallery-->
	  <%= javascript_include_tag "//blueimp.github.io/Gallery/js/jquery.blueimp-gallery.min.js" %>
	  <!--<%= javascript_include_tag "js/bootstrap-image-gallery.min.js" %>-->

	  <%= javascript_include_tag "vendor/modernizr" %>
	  <%= csrf_meta_tags %>
	  <%= tag :meta, :name => "stripe-key", :content => ENV["STRIPE_PUBLIC_KEY"] %>
	  <%= yield(:head) %>
	</head>
	<body>
			<%= render 'layouts/header' %>
			<!-- 
			<p class="notice"><%= notice %></p>
			<p class="alert"><%= alert %></p> 
			-->
			<div class="container-fluid">
				<% flash.each do |name, msg| %>
					<% if msg.is_a?(String) %>
						<br>
						<div class="alert alert-<%= name.to_s == 'notice' ? "success" : "danger" %> alert-dismissable">
							<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
							<%= content_tag :div, msg, :id => "flash_#{name}" %>
						</div>
					<% end %>
				<% end %>
			</div>

			<%= yield %>

			<%= render 'layouts/footer' %>


	</body>
</html>
